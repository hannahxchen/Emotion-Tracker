<% include partials/head %>
<title>活動報名</title>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
<script type="text/javascript" src="/js/libs/dropzone.js"></script>
<link href="/css/dropzone.css" rel="stylesheet">
<style>
.container {
  width: 800px;
  margin: 0 auto;
  margin-top: 60px;
}

</style>
</head>
<body>
  <% include partials/navbar %>
  <div class="container">
    <% if (success_msg) {%>
      <div class="alert alert-success"><%= success_msg %></div>
    <% } %>
    <% if(!success_msg) {%>
      <% if(errors) {%>
        <% errors.forEach(function(error){ %>
          <div class="alert alert-danger"><%= error.msg %></div>
        <% }); %>
      <% } %>
      <% if(error_msg) {%>
        <div class="alert alert-danger"><%= error_msg %></div>
      <% } %>
    <form role="form" method="post" action="/activity/<%= id %>/enroll" enctype="multipart/form-data">
      <h2 class="text-left" style="margin-bottom: 30px;"><b><%= title %> 報名表單</b></h2>
      <div class="form-group row">
        <label class="col-form-label">姓名：</label><span><%= user.name %></span>
      </div>
      <div class="form-group row">
        <label class="col-form-label">性別：</label>
        <% if(gender = 'F'){ %>
          <span>女</span>
        <% }else{ %>
          <span>男</span>
        <% } %>
      </div>
      <div class="form-group row">
        <label class="col-form-label">生日：</label><span><%= moment(user.birth).format('YYYY-MM-DD'); %></span>
      </div>
      <div class="form-group row">
        <label class="col-form-label">聯絡電話</label>
        <input class="form-control" type="tel" name="tel">
      </div>
      <div class="form-group row">
        <label class="col-form-label">聯絡信箱</label>
        <input class="form-control" type="email" name="email" value="<%= user.email %>">
      </div>
      <div class="form-group row">
        <label class="col-form-label">身分證字號</label>
        <input class="form-control" type="text" name="idNum">
      </div>
      <div class="form-group row">
        <button id="submit" type="submit" class="btn btn-default">送出</button>
      </div>
    </form>
    <% } %>
  </div>
  <% include partials/footer %>
</body>
</html>
