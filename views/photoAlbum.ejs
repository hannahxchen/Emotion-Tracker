<% include partials/head %>
<script type="text/javascript" src="/js/libs/dropzone.js"></script>
<link href="/css/dropzone.css" rel="stylesheet">
<title>我的相簿</title>
<style>
  .container{
    padding-top: 100px;
  }
  .row{
    padding-top: 40px;
    padding-left: 40px;
  }
</style>
</head>
<body>
  <% include partials/navbar %>
  <div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <div class="item active">

        </div>

        <div class="item">

        </div>

        <div class="item">

        </div>
      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

  <div class="row">
    <button type="button" class="btn" data-toggle="modal" data-target="#modal-1">上傳照片</button>
  </div>
  <div class="modal fade" id="modal-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h2 class="text-left"><b>上傳照片</b></h2>
        </div>
        <div class="modal-body">
          <form action="/photoAlbum/uploadImage" id="mydropzone" method="post" enctype="multipart/form-data" class="dropzone needsclick dz-clickable">
            <div class="dz-message needsclick">拖曳或點選這裡上傳照片</div>
            <div class="fallback">
              <input name="file" type="file" accept="image/*" multiple />
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <a href="" class="btn btn-default" data-dismiss="modal">Close</a>

        </div>
      </div>
    </div>
  </div>

</div>

<script type="text/javascript" src="/js/photoAlbum.js"></script>
<% include partials/footer %>
</body>
</html>
