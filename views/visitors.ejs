<% include partials/head %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="/js/visitor.js"></script>
<title>訪客管理</title>
<style>
#visitor-container{
  padding-top: 40px;
}
</style>
</head>
<body>
  <% include partials/navbar %>
  <div class="container-fluid" id="visitor-container">
    <div class="row">
      <div class="col-md-5">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search" id="search-input">
          <span class="input-group-btn">
            <select id="search-reference" class="btn btn-square" >
              <option>User ID</option>
              <option>姓名</option>
              <option>身分</option>
              <option>性別</option>
              <option>年齡</option>
            </select>
          </span>
          <span class="input-group-btn"><button class="btn btn-default" type="button" id="search">
            <i class="fa fa-search"></i></button>
          </span>
        </div>
        <div class="panel panel-default" style="margin-top: 10px">
          <div class="panel-heading">訪客紀錄</div>
          <table class="table table-striped table-hover" id="visitor-table">
            <thead>
              <tr>
                <th>#</th>
                <th>User ID</th>
                <th>姓名</th>
                <th>時間</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      </div>
      <div class="col-md-7">
        <table class="table table-bordered" style="width: 80%" id="visitor-profile">
          <thead class="thead-inverse"><th colspan="2" class="text-center">訪客資料</th></thead>
          <tbody>
            <th id="hint"><h4 class="text-center">請選擇一位訪客</h4></th>
          </tbody>
        </table>
        <div class="row">
          <div class="col-md-4"></div>
          <div class="col-md-3">
            <span class="btn btn-hover btn-primary glyphicon glyphicon-remove" id="cancel" style="display: none"></span>
            <span class="btn btn-hover btn-primary glyphicon glyphicon-floppy-disk" id="save" style="display: none"></span>
            <span class="btn btn-hover btn-primary glyphicon glyphicon-pencil" id="edit" style="display: none"></span>
          </div>
        </div>
      </div>
    </div>

  </div>
  <% include partials/footer %>
</body>
</html>
